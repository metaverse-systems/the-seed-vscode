{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "out/webview",
    "rootDir": "src/webview",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vscode-webview"]
  },
  "include": ["src/webview/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
